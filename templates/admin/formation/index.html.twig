{% extends 'base.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block body %}
    <h1>Formation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Initial</th>
                <th>Description</th>
                <th>Content</th>
                <th>Price</th>
                <th>Discount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.title }}</td>
                <td>{{ formation.initial }}</td>
                <td>{{ formation.description }}</td>
                <td>{{ formation.content }}</td>
                <td>{{ formation.price }}</td>
                <td>{{ formation.discount }}</td>
                <td>
                    <a href="{{ path('app_admin_formation_show', {'id': formation.id}) }}">show</a>
                    <a href="{{ path('app_admin_formation_edit', {'id': formation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_formation_new') }}">Create new</a>
{% endblock %}
